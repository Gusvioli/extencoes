{
  "manifest_version": 3,
  "name": "Resolva Questões por Imagem",
  "version": "1.0.0",
  "description": "Cole ou arraste uma imagem de uma questão e receba a resposta automaticamente usando inteligência artificial.",
  "icons": {
    "16": "icons/cloud-computing_6843085.png",
    "32": "icons/cloud-computing_6843085.png",
    "48": "icons/cloud-computing_6843085.png",
    "128": "icons/cloud-computing_6843085.png"
  },
  "permissions": [
    "clipboardRead",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/cloud-computing_6843085.png",
      "32": "icons/cloud-computing_6843085.png",
      "48": "icons/cloud-computing_6843085.png",
      "128": "icons/cloud-computing_6843085.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}